<h1>Create a new Song:</h1>

<%= form_for(@song) do |f|%>

  <div>
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div><br>


  <div>
    <%= f.label :genre%>
    <%= f.text_field :genre%>
  </div><br>

  <div>
    <label for="song_artist_id">Select an artist:</label>
    <%= f.collection_select :artist_id, Artist.all, :id, :name, prompt: true%>
  </div><br>

  <div>
    <h3>Or create a new artist:</h3>
    <%= f.fields_for :artist, Artist.new do |a|%>
        <%= a.label :name, "Artist Name:" %>
        <%= a.text_field :name %>
    <% end %>
  </div>


  <%= f.submit %>

<% end %>



